
<%= form_for(book) do |f| %>
	<div class="field row">
		<%= f.label :title %><br>
		<%= f.text_field :title, class:"form-group form-control" %>
	</div>

	<div class="field row">
		<%= f.label :body %><br>

		<!-- ここを変更 -->

		<%= f.text_area :body, class:"form-group form-control" %>
	</div>

	<div class="actions row">
		<%= f.submit class:"btn btn-primary btn-block" %>
	</div>
<% end %>
